<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Vues.AjoutEtudiantVue"
             Title="AjoutEtudiantVue">
    <VerticalStackLayout>
        <Label 
            Text="Equipe"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Entry x:Name="equipe" Placeholder="" Text="{Binding Equipe}" />

        <Label 
            Text="Joueur"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Entry x:Name="joueur" Placeholder="" Text="{Binding Joueur}" />

        <Label 
            Text="points"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Entry x:Name="points" Placeholder="" Text="{Binding Points}"/>
        
        
<Button Text="valider" Clicked="Button_Clicked" />

    </VerticalStackLayout>
</ContentPage>